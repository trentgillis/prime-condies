generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type AreaLocation {
  coordinates Float[]
  type        String
}

type AreasLocation {
  coordinates Float[]
  type        String
}

model area {
  id       String       @id @default(auto()) @map("_id") @db.ObjectId
  v        Int          @map("__v")
  areaId   String
  country  String
  location AreaLocation
  name     String
  place    String
}

model areas {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  v        Int           @map("__v")
  areaId   String
  country  String
  location AreasLocation
  name     String
  place    String
}
